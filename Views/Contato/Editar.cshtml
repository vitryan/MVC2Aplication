@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>
<form>
    <div class="mb-3">
        <label for="nome" class="form-label"><strong>Nome</strong></label>
        <input type="text" class="form-control" placeholder="Digite o novo nome do contato">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label"><strong>E-mail</strong></label>
        <input type="text" id="email" class="form-control" placeholder="Digite o novo e-mail do contato">
    </div>
    <div class="mb-3">
        <label for="celular" class="form-label"><strong>Celular</strong></label>
        <input type="text" id="celular" class="form-control" placeholder="Digite o novo celular do contato">
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-info">Editar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>